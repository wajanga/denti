<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.cvl.udsm.com.denti" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.HomeActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.NectaActivity"
            android:label="@string/title_activity_necta" >
        </activity>
        <activity
            android:name=".activities.HeslbActivity"
            android:label="@string/title_activity_heslb" >
        </activity>
        <activity
            android:name=".activities.NectaResultActivity"
            android:label="@string/title_activity_necta_result" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.HeslbResultActivity"
            android:label="@string/title_activity_heslb_result" >
        </activity>
        <activity
            android:name=".activities.NectaActivity2"
            android:label="@string/title_activity_necta_activity2" >
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
    </application>

</manifest>
